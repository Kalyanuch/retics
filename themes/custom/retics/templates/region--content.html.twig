{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% if content %}
  {% if retics_page_type == 'portfolio' %}
    {%
      set section_classes = [
      'portfolio_section',
      'layout_padding-bottom',
      'layout_padding2-top'
    ]
    %}
  {% endif %}
  {% if retics_page_type == 'page' %}
    {%
      set section_classes = [
      'about_section',
      'about_section1',
      'layout_padding'
    ]
    %}
  {% endif %}
  {% if retics_page_type == 'blog' or retics_page_type == 'article' %}
    {%
      set section_classes = [
      'blog_section',
      'layout_padding'
    ]
    %}
  {% endif %}
  {% if retics_page_type == 'contact' %}
    {%
      set section_classes = [
      'contact_section',
    ]
    %}
  {% endif %}

  {% if retics_page_type == 'frontpage' or retics_page_type == 'contact' %}
    {{ content }}
  {% else %}
  <section{{ attributes.addClass(section_classes) }}>
    <div class="container">
      {{ content }}
    </div>
  </section>
  {% endif %}
{% endif %}
